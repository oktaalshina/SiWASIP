<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wasis_pr00">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header icon + title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="32dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/upload_24px"
                android:tint="@color/brand"/>

            <TextView
                android:id="@+id/txtUploadTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unggah Dokumen"
                android:textColor="@color/wasis_pr80"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Pilih dokumen -->
        <TextView
            android:id="@+id/labelChooseFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih dokumen"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btnChooseFile"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/wasis_nt80"
            android:text="Pilih"
            android:textAllCaps="false"
            android:textColor="#B0B0B0" />

        <TextView
            android:id="@+id/txtFileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text=""
            android:textSize="13sp"
            android:textColor="#666666" />

        <!-- Judul -->
        <TextView
            android:id="@+id/labelTitle"
            android:layout_width ="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Judul"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/edtTitle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            android:padding="12dp"
            android:hint="Masukkan judul dokumen..."
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:textColorHint="#B0B0B0"
            android:backgroundTint="#E0E0E0" />

        <!-- Keterangan -->
        <TextView
            android:id="@+id/labelDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Keterangan"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/edtDescription"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            android:gravity="top|start"
            android:padding="12dp"
            android:hint="Masukkan keterangan..."
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:textColorHint="#B0B0B0"
            android:backgroundTint="#E0E0E0"
            android:inputType="textMultiLine" />

        <!-- Tombol aksi -->
        <Button
            android:id="@+id/btnUpload"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/wasis_pr60"
            android:text="Unggah Dokumen"
            android:textAllCaps="false"
            android:textColor="@color/wasis_nt80" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#EEF0E8"
            android:text="Batalkan"
            android:textAllCaps="false"
            android:textColor="@color/wasis_pr60" />

    </LinearLayout>
</ScrollView>